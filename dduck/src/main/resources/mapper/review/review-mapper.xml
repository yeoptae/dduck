<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="review">
 
	<select id="selectReviewCount" resultType="_int">
	 select count(*) from review
	</select>
	<select id="selectReviewList" resultType="map">
		SELECT * from REVIEW ORDER BY reviewen DESC
	</select>
	
	<insert id="insertReview" parameterType="review">
		INSERT INTO review VALUES (seq_reviewno.nextval, 'test1', 1234, sysdate, #{reviewContent}, #{reviewStar})
	</insert> 
	
	<delete id="deleteReview" parameterType="review">
		delete from review where cid='test4'
	</delete>
	
	<update id="updateReview" parameterType="review">
		UPDATE REVIEW 
			SET REVIEWCONTENT = #{reviewContent}
		WHERE CID = 'test2'
	</update>
	
</mapper>